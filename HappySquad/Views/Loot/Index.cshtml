@model IEnumerable<HappySquad.Models.Loot>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/themes/base/dataTables")
    @Scripts.Render("~/bundles/dataTables")
    <script> $(document).ready(function () {
     $('#lootTable').dataTable({

         "aaSorting": [[0, "desc"]],
         "aoColumns": [null, null, null],
         "bLengthChange": false,
     });
 });
    </script>}
@{
    ViewBag.Title = "Каталог снаряжения";
}



<h2>Каталог снаряжения</h2>

<p>
    @Html.ActionLink("Добавить снаряжение", "Create")
</p>

<table id="lootTable" class="dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Edit", new { id = item.Id })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
            </tr>
        }
    </tbody>
</table>