@model IEnumerable<HappySquad.Models.Unit>

@{
    ViewBag.Title = "Каталог Юнитов";
}

<h2>Каталог Юнитов</h2>

<p>
    @Html.ActionLink("Добавить Юнита", "Create")
</p>
<table id="unitTable" class="dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Race)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToTroops)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Models)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Edit", new { id = item.Id })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Race)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ToTroops)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Models)
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link href="~/Content/jquery.dataTables_themeroller.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script> $(document).ready(function () {
     $('#unitTable').dataTable({

         "aaSorting": [[0, "desc"]],
         "aoColumns": [null, null, null, null, null, null],
         "bLengthChange": false,
     });
 });
    </script>}